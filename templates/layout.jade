doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:400,700|Inconsolata')
      link(rel='stylesheet', href='/css/main.css')
  body(class=bodyclass)
    header
      block header
        h1
          if  linkTitle
            a(href='/')= locals.name
          else
            = locals.name
    block content

    footer
      block footer
